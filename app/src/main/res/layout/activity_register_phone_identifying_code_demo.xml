    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llidentifyingcode_demo"
        android:orientation="vertical"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llSetuppassword"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/edit_title_text_demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_back_margin"
                android:layout_marginStart="@dimen/title_back_margin"
                android:layout_toRightOf="@id/sms_back_button_demo"
                android:layout_toEndOf="@id/sms_back_button_demo"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/icloud_24dp"
                android:text="@string/verification_code_has_been" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvidentifyingCountryCode_demo"
                android:text="+86"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvidentifyingphoneNumber_demo"
                android:text="15112498866"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="right"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/tvidentifyingcode_demo"
                android:text="888958"
                android:hint="@string/acquire_code"
                android:layout_marginLeft="12sp"
                android:layout_marginStart="12sp"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                android:gravity="left|center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLength="6"
                android:autoLink="none"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tvTime_demo"
                android:clickable="true"
                android:text="@string/tudc_sdk_resend_verification_code"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/icloud_1aaa70"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e3e5e9"></View>

    </LinearLayout>

