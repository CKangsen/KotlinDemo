<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/icloud_ffffff">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/text_title_demo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cloud_bg_title">


        <ImageView
            android:id="@+id/sms_back_button_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_back_margin"
            android:layout_marginStart="@dimen/title_back_margin"
            android:background="@drawable/cloud_ic_title_back"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY" />






        <!--<View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sms_next_demo"
            android:background="@color/color_333333" />

        <TextView
            android:id="@+id/sms_next_demo"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/next"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/color_333333"
            />-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llSetpassword"
        android:orientation="vertical"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llSetuppassword"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/edit_title_text_demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_back_margin"
                android:layout_marginStart="@dimen/title_back_margin"
                android:layout_toRightOf="@id/sms_back_button_demo"
                android:layout_toEndOf="@id/sms_back_button_demo"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/icloud_24dp"
                android:text="@string/set_up_password_to_complete" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/icloud_24dp"
            android:gravity="center_vertical">
            <com.afmobi.tudcsdk.login.widget.PasswordCustomPasteEditText
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/etPassword_demo"
                android:inputType="textPassword"
                android:text="888232958"
                android:layout_marginLeft="12sp"
                android:layout_marginStart="12sp"
                android:textColor="@color/color_333333"
                android:hint="@string/password_input_box_hint"
                android:textSize="18sp"
                android:gravity="left|center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLength="20"
                android:singleLine="true"
                android:autoLink="none"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivVisibility_demo"
                android:clickable="true"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/cloud_ic_password_open"
                android:padding="6dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e3e5e9"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPasswordTips_demo"
                android:src="@drawable/cloud_ic_passoword_wrong"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvpasswordTips_demo"
                android:text="@string/passsword_length_tips"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="left"
                android:textColor="@color/color_999999"
                android:textSize="14sp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/google_register_tips"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_666666"
                android:text="@string/google_register_tips_one"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_666666"
                android:text="@string/google_register_tips_second"/>
        </LinearLayout>
    </LinearLayout>

    <!--<Button-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="36dp"-->
        <!--android:id="@+id/sms_next_demo"-->
        <!--android:layout_gravity="right|center_vertical"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:text="@string/register_next"-->
        <!--android:textColor="@color/icloud_ffffff"-->
        <!--android:textSize="16dp"-->
        <!--android:layout_marginTop="@dimen/icloud_16dp"-->
