<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/out">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_black_tran90" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alert_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icloud_84dp"
                android:gravity="center"
                android:text=""
                android:paddingStart="@dimen/icloud_16dp"
                android:paddingLeft="@dimen/icloud_16dp"
                android:paddingEnd="@dimen/icloud_16dp"
                android:paddingRight="@dimen/icloud_16dp"
                android:textColor="@color/icloud_333333"
                android:textSize="@dimen/icloud_16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/action1"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center_vertical"
                android:text=""
                android:paddingStart="@dimen/icloud_16dp"
                android:paddingLeft="@dimen/icloud_16dp"
                android:paddingEnd="@dimen/icloud_16dp"
                android:paddingRight="@dimen/icloud_16dp"
                android:textColor="@color/icloud_333333"
                android:textSize="@dimen/icloud_16dp"
                android:background="@drawable/list_bg_selector"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color_e3e5e9"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/action2"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center_vertical"
                android:text=""
                android:paddingStart="@dimen/icloud_16dp"
                android:paddingLeft="@dimen/icloud_16dp"
                android:paddingEnd="@dimen/icloud_16dp"
                android:paddingRight="@dimen/icloud_16dp"
                android:textColor="@color/icloud_333333"
                android:textSize="@dimen/icloud_16dp"
                android:background="@drawable/list_bg_selector"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color_e3e5e9"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/action3"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center_vertical"
                android:text=""
                android:paddingStart="@dimen/icloud_16dp"
                android:paddingLeft="@dimen/icloud_16dp"
                android:paddingEnd="@dimen/icloud_16dp"
                android:paddingRight="@dimen/icloud_16dp"
                android:textColor="@color/icloud_333333"
                android:textSize="@dimen/icloud_16dp"
                android:background="@drawable/list_bg_selector"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color_e3e5e9"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>